{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "target": "es5",
    "allowSyntheticDefaultImports":true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [ "src/*" ],
    },
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}